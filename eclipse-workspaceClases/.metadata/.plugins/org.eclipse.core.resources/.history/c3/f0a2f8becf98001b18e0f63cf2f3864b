// sizeof(arrayTexto) : la variable que guarda la direc de memoria de cada simbolo
//  \0 -> es el numero 0



#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int validarQueSeaNumero (char* texto);

int main(void) {
	setbuf(stdout, NULL);

	char texto [11];
	int saldoBanco = 1;
	//scanf ("%s", texto); no va y gets tampoco porque no le podemos pasar el limite del array

	fgets (texto, 11, stdin);//array, tamaño, de donde va a leer
	//validar que sean todos los caracteres numericos

	if (validarQueSeaNumero (texto)==1)
	{
		saldoBanco=atoi (texto);
	}

	int i;
	for (i=0; i<11; i++)
	{
		printf ("\n%d) %d-%c", i, texto [i], texto [i]);
	}
	printf("\nIngresaste: %s, %d", texto, saldoBanco);

	return EXIT_SUCCESS;
}

int validarQueSeaNumero (char* texto)
{
	int retorno = -1;
	int i= 0;
	while (texto[i] != 0)
	{
		if (texto [i] > '47'  && texto[i]< '58' )
		{
			 *texto = atoi(texto);
		}
		i++;
		retorno = 1;
	}
	return retorno;
}
