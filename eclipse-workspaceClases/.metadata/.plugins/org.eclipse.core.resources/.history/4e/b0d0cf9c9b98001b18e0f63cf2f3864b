int utn_getNumero (int* pResultado, char* mensaje, char* mensajeError, int minimo, int maximo, int reintentos)
{
	int retorno= -1;
	int buffer;

	if (pResultado != NULL && mensaje != NULL && mensajeError != NULL && minimo <= maximo && reintento>= 0)
	do{
		printf("%s", mensaje);
		scanf("%d", &buffer);

		if (buffer >= minimo && buffer <= maximo)
		{
			*pResultado = buffer;
			retorno= 0;
			break;
		}
		reintentos--;
	}while (reintentos>0);


	return retorno;
}
