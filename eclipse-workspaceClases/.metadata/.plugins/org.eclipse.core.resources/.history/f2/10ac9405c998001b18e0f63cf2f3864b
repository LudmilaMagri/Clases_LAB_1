// sizeof(arrayTexto) : la variable que guarda la direc de memoria de cada simbolo
//  \0 -> es el numero 0



#include <stdio.h>
#include <stdlib.h>


int main(void) {
	setbuf(stdout, NULL);

	char texto [11];
	int saldoBanco = 1;
	scanf ("%s", texto);

	// texto[0]: h
	// texto[1]: o
	// texto[2]: l
	// texto[3]: a
	// texto[4]: \0 o 0 numerico
	// texto[5...]: basura

	int i;
	for (i=0; i<11; i++)
	{
		printf ("\n%d) %d-%c", i, texto [i], texto [i]);
	}
	printf("\nIngresaste: %s", texto);
	printf ("\ntenes %d", saldoBanco);


	return EXIT_SUCCESS;
}
