#include <stdio.h>
#include <stdlib.h>
#define NUMEROS 5

int printArrayInt (int* pArray, int limite);
int ordenarArray (int* pArray, int limite, int* pNumMin, int* pIndiceMin);

int main(void) {
	setbuf(stdout, NULL);

	int arrayNum [NUMEROS] = {9, 15, 18, 21, 5};
	int respuesta;
	int numMin;
	int indiceMin;

	printArrayInt(arrayNum, NUMEROS);
	respuesta = ordenarArray (arrayNum, NUMEROS, &numMin, &indiceMin);
	if (respuesta == 0)
	{
		printf ("Ordenamiento: %d", respuesta);
	}





	return EXIT_SUCCESS;
}

int printArrayInt (int* pArray, int limite)
{
	int retorno = -1;
	int i;
	if (pArray != NULL && limite >= 0)
	{
		retorno = 0;
		for (i=0; i<limite; i++)
		{
			printf ("\n [DEBUG] Indice: %d --- Valor: %d", i, pArray[i]);
		}

	}
	return retorno;
}


int ordenarArray (int* pArray, int limite, int* pNumMin, int* pIndiceMin)
{
	int retorno = -1;

	if (pArray != NULL && limite >= 0)
	{
		int i;
		int numMin;
		int indiceMin=0;
		int nuevoLimite = limite-1;

		numMin = pArray[0];

		for (i=0; i<nuevoLimite; i++)
		{
			if (i != pArray [i])
			{
				if (pArray [i] < numMin)
				{
					numMin = pArray[i];
					indiceMin = i;
				}
				*pNumMin = numMin;
				*pIndiceMin = indiceMin;
			}

		}
		retorno =0;
	}
	return retorno;
}
